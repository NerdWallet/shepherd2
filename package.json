{
  "name": "@nerdwallet/shepherd",
  "version": "2.5.0",
  "description": "A utility for applying code changes across many repositories",
  "keywords": [
    "codemod",
    "codemods",
    "migration"
  ],
  "type": "module",
  "homepage": "https://github.com/NerdWalletOSS/shepherd#readme",
  "bugs": {
    "url": "https://github.com/NerdWalletOSS/shepherd/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NerdWalletOSS/shepherd.git"
  },
  "license": "Apache-2.0",
  "author": "Nathan Walters",
  "main": "./lib/cli.js",
  "bin": {
    "shepherd": "./lib/cli.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.esm.json",
    "build:watch": "npm run build --watch",
    "fix-lint": "eslint src/**/*.ts --fix && prettier --write .",
    "lint": "eslint src/**/*.ts && prettier --check ./src/**/*.ts",
    "prepublishOnly": "npm run test && npm run build",
    "test": "jest --coverage src/"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "\\.mock\\.ts$"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.cjs.json"
        }
      ]
    }
  },
  "files": [
    "lib"
  ],
  "dependencies": {
    "@octokit/core": "^5.1.0",
    "@octokit/plugin-retry": "^6.0.1",
    "@octokit/plugin-throttling": "^8.1.3",
    "@octokit/rest": "^20.0.2",
    "@types/js-yaml": "^4.0.9",
    "chalk": "^5.3.0",
    "child-process-promise": "^2.2.1",
    "commander": "^11.1.0",
    "fs-extra": "^11.2.0",
    "joi": "^17.12.1",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "log-symbols": "^6.0.0",
    "netrc": "^0.1.4",
    "ora": "^8.0.1",
    "preferences": "^2.0.2",
    "simple-git": "^3.22.0"
  },
  "devDependencies": {
    "@octokit/plugin-rest-endpoint-methods": "^10.2.0",
    "@octokit/types": "^12.4.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "conventional-changelog-conventionalcommits": "^7.0.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.4",
    "semantic-release": "^23.0.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
