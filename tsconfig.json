{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "allowJs": false,
    "declaration": true,
    "rootDir": "./src",
    "removeComments": false,
    "strict": true,
    "moduleResolution": "NodeNext",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noEmit": true
  },
  "include": ["src/**/*"]
}
